doctype html
html(lang='en')
  head
    title Form
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
  body
    
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js')
    
    link(rel='stylesheet', href='stylesheets/form.css')
    script(src='javascripts/form.js')
    
    script(src='javascripts/table.js')
    link(rel='stylesheet', href='https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css')
    link(rel='stylesheet', href='https://cdn.datatables.net/buttons/1.5.6/css/buttons.dataTables.min.css')
    br
    br
    .container
      ul.nav.nav-pills
        li.active
          a(data-toggle='pill', href='#form') Form
        li
          a(data-toggle='pill', href='#list') List
      .tab-content
        #form.tab-pane.fade.in.active
          .container
            .push
            .row
              .col-xs-6.col-xs-offset-3
                .response.hide
                  p
                    strong Post Data:
                  pre.
                .alert.alert-success.hide(role='alert')
                  strong Well done!
                  |  You successfully completed this form.
                .alert.alert-danger.hide(role='alert')
                  strong Oh snap!
                  |  Change a few things up and try submitting again.
                form(name='contact', action='/form', method='post')
                  fieldset
                    legend Contact Information
                    .form-group
                      label.hide(for='firstName')
                        i.glyphicon.glyphicon-user
                        |  First Name *
                      input#firstName.form-control.name(autofocus='', type='text', name='firstName', placeholder='First Name *', pattern='^[a-zA-Z][a-zA-Z0-9-_\.]{1,20}$', title='Enter first name (e.g. John)', required='')
                    .form-group
                      label.hide(for='lastName')
                        i.glyphicon.glyphicon-user
                        |  Last Name *
                      input#lastName.form-control.name(type='text', name='lastName', placeholder='Last Name *', pattern='^[a-zA-Z][a-zA-Z0-9-_\.]{1,20}$', title='Enter last name (e.g. Smith)', required='')
                    .form-group
                      label.hide(for='email')
                        i.glyphicon.glyphicon-envelope
                        |  E-mail *
                      input#email.form-control.email(type='email', name='email', placeholder='E-mail *', pattern='[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Za-z]{2,4}$', title='Enter e-mail address (e.g. your.email@address.com)', required='')
                    .form-group
                      label.hide(for='telephone')
                        i.glyphicon.glyphicon-earphone
                        |  Telephone *
                      input#telephone.form-control.tel(type='tel', name='telephone', placeholder='Telephone *', pattern='^\(?\d{3}\)?[- ]?\d{3}[- ]?\d{4}$', title='Enter telephone number (e.g. 555-555-5555)', required='')
                    button.btn.btn-primary.btn-block(type='submit') Submit
        #list.tab-pane.fade
          br
          br
          table#example.display(style='width:100%')
            thead
              tr
                th First Name
                th Last Name
                th Email
                th Mobile
                th Action
            tbody
              each member in data
                tr 
                  td #{member.firstName}
                  td #{member.lastName}
                  td #{member.email}
                  td #{member.telephone}
                  td

                    button.btn.btn-info Edit
                    button(value=member._id style="margin-left:10px").btn.btn-danger.delete Remove
    script(src='https://code.jquery.com/jquery-3.3.1.js')
    script(src='https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js')
    script(src='https://cdn.datatables.net/buttons/1.5.6/js/dataTables.buttons.min.js')
    script(src='https://cdn.datatables.net/buttons/1.5.6/js/buttons.flash.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js')
    script(src='https://cdn.datatables.net/buttons/1.5.6/js/buttons.html5.min.js')
    script(src='https://cdn.datatables.net/buttons/1.5.6/js/buttons.print.min.js')
    script(src="javascripts/edit.js")
